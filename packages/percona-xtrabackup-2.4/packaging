#!/usr/bin/env bash

set -o errexit
set -o nounset

main() {
  install_build_dependencies
  unpack_source
  build_and_install
}

install_build_dependencies() {
  tar -xf common/libaio_*.tar.xz
  cd libaio-*/
  make -j "$(nproc)" install
  cd -

  tar -xf common/libev-*.tar.gz
  cd libev-*/
  ./configure --prefix=/usr/local --disable-static
  make -j "$(nproc)" install
  ./configure --prefix="${BOSH_INSTALL_TARGET}" --libdir="${BOSH_INSTALL_TARGET}/lib/private" --disable-static
  make -j "$(nproc)" install-exec DESTDIR="${BOSH_INSTALL_TARGET}"
  cd -
}

unpack_source() {
  tar -xf percona-xtrabackup-2.4/boost_*.tar.bz2
  tar -xf percona-xtrabackup-2.4/percona-xtrabackup-*.tar.gz
}

build_and_install() {
  cd percona-xtrabackup-2.4.*/
  mkdir bld && cd bld

  local boost_dir
  boost_dir=$(readlink -f ../../boost_*/)

  # shellcheck disable=SC2016
  cmake .. \
    -DBUILD_CONFIG=xtrabackup_release \
    -DCMAKE_CXX_COMPILER=g++ \
    -DCMAKE_C_COMPILER=gcc \
    -DCMAKE_INSTALL_PREFIX="${BOSH_INSTALL_TARGET}" \
    -DCMAKE_INSTALL_RPATH='$ORIGIN/../lib/private' \
    -DINSTALL_MYSQLTESTDIR= \
    -DWITH_BOOST="${boost_dir}" \
    -DWITH_MAN_PAGES=OFF \
    -DWITH_SSL=system \
    -DWITH_VERSION_CHECK=OFF

  make -j "$(nproc)" install/strip
  rm -fr "${BOSH_INSTALL_TARGET}/man/"
}

main
