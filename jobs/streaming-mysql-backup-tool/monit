<% if p("cf-mysql-backup.disabled") == false %>
check process streaming-mysql-backup-tool
  with pidfile /var/vcap/sys/run/bpm/streaming-mysql-backup-tool/streaming-mysql-backup-tool.pid
  start program "/var/vcap/jobs/bpm/bin/bpm start streaming-mysql-backup-tool"
  stop program "/var/vcap/jobs/bpm/bin/bpm stop streaming-mysql-backup-tool"
  group vcap
<% end %>
