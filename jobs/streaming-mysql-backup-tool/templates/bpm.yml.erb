processes:
- name: streaming-mysql-backup-tool
  executable: /var/vcap/packages/streaming-mysql-backup-tool/bin/streaming-mysql-backup-tool
  args:
    - -configPath=/var/vcap/jobs/streaming-mysql-backup-tool/config/streaming-mysql-backup-tool.yml
  additional_volumes:
  - path: /var/vcap/sys
    mount_only: true
    writable: true
  - path: /var/vcap/store
    mount_only: true
    writable: true
  env:
    PATH: /bin:/usr/bin:/sbin:/usr/sbin:<%= p('cf-mysql-backup.xtrabackup_path') %>/xtrabackup/bin
